---
interface Props {
  title: string;
  categories: string[];
  duration?: string;
}

const { title, categories, duration } = Astro.props;
const categoryClasses = categories.join(' ') + " mb-6";
---

<article class={categoryClasses}>
  <h3 class="text-xl font-bold">
    {title} <span class="ml-2">{categories.join(' ')}</span>
  </h3>
  {duration && (
    <p class="not-prose text-sm opacity-70 -mt-1 mb-2">{duration}</p>
  )}
  <slot />
</article>